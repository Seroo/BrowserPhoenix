
<style>
    .resource_category {width:100px; float:left; margin:0px 15px;}
</style>
<div style="width: 180px; margin-right:10px; float:left;height:100%; padding-left: 20px; padding-right:20px; padding-top: 5px; font-size:20px">
    @Player.Current.Colony.Name
</div>

<div style="float:left;">
   
    @{ 
        var colony = Player.Current.Colony;
        var resources = colony.Resources;
    }
        

    @ResourceCategory("Larvae", resources.Larvae, resources.LarvaeProduction)
    @ResourceCategory("Food", resources.Food, resources.FoodProduction)
    @ResourceCategory("Leaves", resources.Leave, resources.LeaveProduction)
    @ResourceCategory("Sand", resources.Sand, resources.SandProduction)
    @ResourceCategory("Sugar", resources.Sugar, resources.SugarProduction)
    @ResourceCategory("Chitin", resources.Chitin, resources.ChitinProduction)
    
    <div style="clear:both;"></div>
</div>
<div style="float:left;">
    <a href="/colony/refreshresources/@Player.Current.Colony.Id">Refresh</a>
</div>
<div style="clear:both;"></div>
@helper ResourceCategory(String category, float stored, float production)
{
    <div class="resource_category">
        <div style="float:left;">
            @category:
        </div>
        <div id="stored-@category" stored="@stored" style="text-align: right;float:right;">
            @Math.Floor(stored)
        </div>
        <br />
        <div style="float:left;">
            @category Prod:
        </div>
        <div id="production-@category" production="@production" style="text-align: right;float:right;">
            @Math.Floor(production)
        </div>
    </div>
}